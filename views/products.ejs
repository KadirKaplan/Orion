                            <th>Miktar</th>
                            <th>İşlemler</th>
                          </tr>
                      </thead>


                      <tbody>
                        <% for (let i = 0; i < product.length; i++) { %> 
                        <tr>
                          <td><%=product[i].productCode %></td>
                          <td><%=product[i].productName %></td>
                          <td><%=product[i].productUnitset.unitName %></td>
                          <td><%=product[i].productCategory.categoryName %></td> 
                          <td><%=product[i].productBrand.brandName %></td>
                          <td><%=product[i].productSalePrice %></td>
                          <td><%=product[i].productAmount %></td>
                          <td>
                            <div class="dropdown" >
                              <button class="btn btn-default btn-sm dropdown-toggle" style="height: 20px;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                               
                              </button>
                              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a  class="dropdown-item" data-toggle="modal" data-placement="bottom" title="İncele" 
                                data-target="#examineCustomer<%=product[i]._id %>" href="#"></i>İncele</a>
                                <a  class="dropdown-item" data-toggle="modal" data-placement="bottom" title="İncele" 
                                data-target="#updateCustomer<%=product[i]._id %>" href="#"></i>Güncelle</a>
                                <a  class="dropdown-item" data-toggle="modal" data-placement="bottom" title="İncele" 
                                data-target="#deleteCustomer<%=product[i]._id %>" href="#"></i>Sil</a>
                            
                              </div>
                            </div>
                             
                             
                          </td>
                        </tr>
                        <!--Update Modal -->
                      <div class="modal " id="updateCustomer<%=product[i]._id %>"  tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel"><strong><%=product[i].companyName %></strong></h5>
                              
                            </div>
                            <div class="modal-body">
                              <form method="POST" action="/product/<%= product[i].slug %>?_method=PUT">
                                <div class="col-md-12">
                                  <label for="exampleInputEmail1" class="form-label">Firma Kodu</label>
                                  <input  type="text" class="form-control" name = "companyCode" value="<%=product[i].companyCode %>"  aria-describedby="emailHelp">
                                  
                                </div>
                                <div class="col-md-12">
                                  <label for="exampleInputEmail1" class="form-label">Firma Adı</label>
                                  <input type="text" class="form-control" name="companyName" value="<%=product[i].companyName %>"  aria-describedby="emailHelp">
                                  
                                </div>
                              
                                <div class="col-md-12">
                                  <label for="exampleInputPassword1" class="form-label">Yetkili Kişi</label>
                                  <input type="text" class="form-control" name="authorizedPerson"  value ="<%=product[i].authorizedPerson %>">
                                </div>
                              
                                <div class="col-md-12">
                                  <label for="exampleInputPassword1" class="form-label">Adres</label>
                                  <textarea class="form-control" name="companyAdress"   rows="3"><%=product[i].companyAdress %></textarea>
                                </div>
                                <div class="col-md-6">
                                  <label for="exampleInputPassword1" class="form-label">VKN/TCKN</label>
                                  <input type="text" class="form-control" name="copanyTaxID"  value="<%=product[i].copanyTaxID %>">
                                </div>
                                <div class="col-md-6">
                                  <label for="exampleInputPassword1" class="form-label">E-posta</label>
                                  <input type="text" class="form-control" name="email" value="<%=product[i].email %>">
                                </div>
                                <div class="col-md-6">
                                  <label for="exampleInputPassword1" class="form-label">Telefon</label>
                                  <input type="text" class="form-control" name="companyTelephone" value="<%=product[i].companyTelephone %>" >
                                </div>
                                <div class="col-md-6">
                                  <label for="exampleInputPassword1" class="form-label">Şehir</label>
                                  <input type="text" class="form-control" name="companyCity" value="<%=product[i].companyCity %>"> 
                                </div>

                                <div class="modal-footer">
                                  <button type="submit" class="btn btn-secondary" data-dismiss="modal" aria-hidden="true">Kapat</button>
                                  <button type="submit" class="btn btn-primary" style="background-color: #1ABB9C;">Kaydet</button>
                                </div>
                                
                              </form>
                            </div>
                            
                          </div>
                        </div>
                      </div>
                        <!--Examine Modal -->
                        <div class="modal " id="examineCustomer<%=product[i]._id %>"  tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel"> <strong><%=product[i].companyName %></strong></h5>
                            
                              </div>
                              <div class="modal-body">
                                <form >
                                  <div class="col-md-12">
                                    <label for="exampleInputEmail1" class="form-label">Firma Kodu</label>
                                    <input  type="text" class="form-control" name = "companyCode" value="<%=product[i].companyCode %>"  aria-describedby="emailHelp" readonly>
                                    
                                  </div>
                                  <div class="col-md-12">
                                    <label for="exampleInputEmail1" class="form-label">Firma Adı</label>
                                    <input type="text" class="form-control" name="companyName" value="<%=product[i].companyName %>"  aria-describedby="emailHelp" readonly>
                                    
                                  </div>
                                
                                  <div class="col-md-12">
                                    <label for="exampleInputPassword1" class="form-label">Yetkili Kişi</label>
                                    <input type="text" class="form-control" name="authorizedPerson"  value ="<%=product[i].authorizedPerson %>" readonly>
                                  </div>
                                
                                  <div class="col-md-12">
                                    <label for="exampleInputPassword1" class="form-label">Adres</label>
                                    <textarea class="form-control" name="companyAdress" readonly  rows="3"><%=product[i].companyAdress %></textarea>
                                  </div>
                                  <div class="col-md-6">
                                    <label for="exampleInputPassword1" class="form-label">VKN/TCKN</label>
                                    <input type="text" class="form-control" name="copanyTaxID"  value="<%=product[i].copanyTaxID %>" readonly>
                                  </div>
                                  <div class="col-md-6">
                                    <label for="exampleInputPassword1" class="form-label">E-posta</label>
                                    <input type="text" class="form-control" name="email" value="<%=product[i].email %>" readonly>
                                  </div>
                                  <div class="col-md-6">
                                    <label for="exampleInputPassword1" class="form-label">Telefon</label>
                                    <input type="text" class="form-control" name="companyTelephone" value="<%=product[i].companyTelephone %>" readonly>
                                  </div>
                                  <div class="col-md-6">
                                    <label for="exampleInputPassword1" class="form-label">Şehir</label>
                                    <input type="text" class="form-control" name="companyCity" value="<%=product[i].companyCity %>" readonly> 
                                  </div>
  
                                  <div class="modal-footer">
                                    <button type="submit" class="btn btn-secondary" data-dismiss="modal" aria-hidden="true">Kapat</button>
                                    <button type="submit" class="btn btn-primary" style="background-color: #1ABB9C;">Kaydet</button>
                                  </div>
                                  
                                </form>
                              </div>
                              
                            </div>
                          </div>
                        </div>
                       <!--Detete item Modal -->
                      <div class="modal" id="deleteCustomer<%=product[i]._id %>" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title">Uyarı</h5>
                              
                              </button>
                            </div>
                            <div class="modal-body">
                              <p><strong><%=product[i].companyName %></strong> isimli firmayı silmek istediğinizden emin misiniz? </p>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                             <a href ="/product/<%= product[i].slug %>?_method=DELETE" type="button" class="btn btn-primary" style="background-color: #1ABB9C;">Onayla</a>
                             
                            </div>
                          </div>
                        </div>
                      </div>
                        <% } %> 
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
         </div>
       </div>
 </div>
</div>
</div>
       <!-- Add Modal -->
       <div class="modal fade" id="addProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel"><strong>Stok Ekle</strong></h5>
              
            </div>
            <div class="modal-body">
              <form method="POST" action="/products">
                <div class="col-md-12">
                  <label for="exampleInputEmail1" class="form-label">Stok Kodu</label>
                  <input  type="text" class="form-control" name = "productCode"  aria-describedby="emailHelp">
                  
                </div>
                <div class="col-md-12">
                  <label for="exampleInputEmail1" class="form-label">Stok Adı</label>
                  <input type="text" class="form-control" name="productName"  aria-describedby="emailHelp">
                  
                </div>
              
                <div class="col-md-12">
                  <label for="exampleInputPassword1" class="form-label">Stok Açıklaması</label>
                  <input type="text" class="form-control" name="productDescription" >
                </div>
              
                <div class="col-md-6">
                  <label for="exampleInputPassword1" class="form-label">Birim</label>
                  <select  class="form-control" name="productUnitset" >
                    <option value="">Seçiniz..</option>
                    <% for (let i=0; i< unitsets.length; i++) { %>
                    <option value="<%= unitsets[i]._id %>"><%= unitsets[i].unitName %></option>
                   <%  } %>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="exampleInputPassword1" class="form-label">Kategori</label>
                  <select  class="form-control" name="productCategory" >
                    <option value="">Seçiniz..</option>
                    <% for (let i=0; i< categories.length; i++) { %>
                    <option value="<%= categories[i]._id %>"><%= categories[i].categoryName %></option>
                   <%  } %>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="exampleInputPassword1" class="form-label">Marka</label>
                  <select  class="form-control" name="productBrand">
                    <option value="">Seçiniz..</option>
                    <% for (let i=0; i< brands.length; i++) { %>
                      <option value="<%= brands[i]._id %>"><%= brands[i].brandName %></option>
                   <%  } %>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="exampleInputPassword1" class="form-label">Kdv Oranı</label>
                  <select  class="form-control" name="productVatrate" >
                    <option value="">Seçiniz..</option>
                    <% for (let i=0; i< vatrates.length; i++) { %>
                      <option value="<%= vatrates[i]._id %>"><%= vatrates[i].vatrate %></option>
                   <%  } %>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="exampleInputPassword1" class="form-label">Alış Fiyatı</label>
                  <input type="text" class="form-control" name="productPurcPrice" placeholder="₺" >
                </div>
                <div class="col-md-6">
                  <label for="exampleInputPassword1" class="form-label">Satış Fiyatı</label>
                  <input  type="text" class="form-control" name="productSalePrice" placeholder="₺">
                </div>
      
             
              
                
                <div class="modal-footer">
                  <button type="submit" class="btn btn-secondary" data-dismiss="modal" aria-hidden="true">Kapat</button>
                  <button type="submit"  style="background-color: #1ABB9C;" class="btn btn-primary">Kaydet</button>
                </div>
                
              </form>
            </div>
            
          </div>
        </div>
      </div>

